<?php
class Sessions {

protected $sessionID;

public function __construct(){
    if( !isset($_SESSION) ){
        $this->init_session();
    }
}

public function init_session(){
    session_start();
}

public function get_session_id(){
    return session_id();
}

public function session_exist( $session_name){
    return isset($_SESSION[$session_name]);
}


}
?>