<?php

class Property{

	public $sq_footage , $bedrooms, $bathrooms, $year_built, $lot_size, $stories, $sq_f, $radius, $age, $l_size;
	public $story, $pool, $basement, $beds_from, $beds_to, $baths_from, $baths_to, $sale_range, $sale_type;


	public function __construct(){
		$this->sq_f = "+/- 20%";
		$this->radius  = isset($_SESSION['refineSearch']['radius']) ? $_SESSION['refineSearch']['radius'] : "0.5 Mile";
		$this->age  = isset($_SESSION['refineSearch']['age']) ? $_SESSION['refineSearch']['age'] : "+/- 5 years";
		$this->l_size  = isset($_SESSION['refineSearch']['l_size']) ? $_SESSION['refineSearch']['l_size'] : "+/- 50%";
