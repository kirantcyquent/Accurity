		$this->basement = isset($_SESSION['refineSearch']['basement']) ? $_SESSION['refineSearch']['basement'] : "No";
		$this->beds_from = isset($_SESSION['refineSearch']['beds_from']) ? $_SESSION['refineSearch']['beds_from'] : "2";
		$this->beds_to = isset($_SESSION['refineSearch']['beds_to']) ? $_SESSION['refineSearch']['beds_to'] : "3";
		$this->baths_from = isset($_SESSION['refineSearch']['baths_from']) ? $_SESSION['refineSearch']['baths_from'] :"2";
		$this->baths_to = isset($_SESSION['refineSearch']['baths_to']) ? $_SESSION['refineSearch']['baths_to'] :"3";
		$this->sale_range = isset($_SESSION['refineSearch']['sale_range']) ? $_SESSION['refineSearch']['sale_range'] :"0.3 Months";
		$this->sale_type = isset($_SESSION['refineSearch']['sale_type']) ? $_SESSION['refineSearch']['sale_type'] :"Full Value";
	}

}
